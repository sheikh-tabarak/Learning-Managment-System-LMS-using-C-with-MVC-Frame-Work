@model TL_LMS.Models.Student

@{
    // Layout = null;
    ViewBag.title = Model.student_name +" | Student ";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <style>


        :root {
            --main-color: #4a76a8;
        }

        .bg-main-color {
            background-color: var(--main-color);
        }

        .text-main-color {
            color: var(--main-color);
        }

        .border-main-color {
            border-color: var(--main-color);
        }
    </style>






    <div class="bg-gray-100">
        <div class="w-full text-white bg-amber-600">
            <div x-data="{ open: false }"
                 class="flex flex-col max-w-screen-xl px-4 mx-auto md:items-center md:flex-row md:px-6 lg:px-8">
                <span class="backarrow" style="color:white; font-size:20px">
                    @Html.ActionLink("←", "Index")
                </span>
                <div class="p-4 text-left">

                    Student's Details


                </div>

            </div>
        </div>
        <!-- End of Navbar -->

        <div class="container mx-auto my-5 p-5">
            <div class="md:flex no-wrap md:-mx-2 ">
                <!-- Left Side -->
                <div class="w-full md:w-3/12 md:mx-2">
                    <!-- Profile Card -->
                    <div class="bg-white p-3 border-t-4 border-amber-600">
                        <div class="image overflow-hidden">
                            
                        </div>
                        <h1 class="text-gray-900 font-bold text-xl leading-8 my-1"> @Html.DisplayFor(model => model.student_name)</h1>
                        <h3 class="text-gray-600 font-lg text-semibold leading-6">Student in  @Html.DisplayFor(model => model.s_department)</h3>
                        <p class="text-lg text-gray-500 hover:text-gray-600 leading-6 py-3">

                            @Html.DisplayFor(model => model.student_name) is the Student in Registered under
                            @Html.DisplayFor(model => model.s_department) Department with Registration no.
                            @Html.DisplayFor(model => model.student_reg_no) and keeping his degree continue with
                            @Html.DisplayFor(model => model.s_grade) grade

                        </p>

                        <p class="edit-button py-2 px-10 text-lg font-medium text-center text-white bg-amber-600 rounded-lg hover:bg-amber-700 focus:ring-4 focus:outline-none focus:ring-amber-600 dark:bg-amber-600 dark:hover:bg-amber-600 dark:focus:ring-amber-600">

                            <a> @Html.ActionLink("Edit Details", "Edit", new { id = Model.student_reg_no })</a>
                        </p>


                        <ul class="bg-gray-100 text-gray-600 hover:text-gray-700 hover:shadow py-2 px-3 mt-3 divide-y rounded shadow-sm">
                            <li class="flex items-center py-3">
                                <span>Roll No</span>

                                <span class="ml-auto">
                                    <span class="bg-amber-600 py-1 px-2 rounded text-white text-lg">@Html.DisplayFor(model => model.student_reg_no)</span>
                                </span>
                            </li>
                            <li class="flex items-center py-3">
                                <span>Registered Courses</span>
                                <span class="ml-auto"> @Html.DisplayFor(model => model.Registrations.Count)</span>
                            </li>
                        </ul>
                    </div>
                    <!-- End of profile card -->
                    <div class="my-4"></div>
                    <!-- Friends card -->
                    <div class="bg-white p-3 hover:shadow">
                        <div class="flex items-center space-x-3 font-semibold text-gray-900 text-xl leading-8">
                            <span class="text-amber-600">
                                <svg class="h-5 fill-current" xmlns="http://www.w3.org/2000/svg" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                                </svg>
                            </span>
                            <span>Assigned Teachers</span>
                        </div>


                        @foreach (var item in Model.Registrations)
                        {
                            <span> → &nbsp;</span> @Html.DisplayFor(modelItem => item.Teacher.instructor_name)<br>

                        }



                    </div>
                    <!-- End of friends card -->
                </div>
                <!-- Right Side -->
                <div class="w-full md:w-9/12 mx-2 h-64">
                    <!-- Profile tab -->
                    <!-- About Section -->
                    <div class="bg-white p-3 shadow-sm rounded-sm">
                        <div style="padding-bottom:10px" class="flex items-center space-x-2 font-semibold text-gray-900 leading-8">
                            <span clas="text-amber-600">
                                <svg class="h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </span>
                            <span class="tracking-wide">Registered Courses</span>
                        </div>
                        <div class="text-gray-700">


                            <table class=" table-fixed	min-w-full divide-y divide-white-300">
                                <thead class="bg-amber-600 text-white">
                                    <tr>

                                        <th scope="col" class="py-3.5 pr-3 text-left text-xl font-semibold text-white sm:pl-6">
                                            Courses Code
                                        </th>
                                        <th scope="col" class="py-3.5 pr-3 text-left text-xl font-semibold text-white sm:pl-6">
                                            Courses Title
                                        </th>
                                        <th scope="col" class="py-3.5 pr-3 text-left text-xl font-semibold text-white sm:pl-6">
                                            Course Instructor
                                        </th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model.Registrations)
                                {
                                    <tr>
                                        <td style="border-width:0px 0px 1px 0px" class="whitespace-nowrap px-5 py-2 text-2-xl text-gray-500">
                                            @Html.DisplayFor(modelItem => item.Cours.course_id)
                                        </td>
                                        <td style="border-width:0px 0px 1px 0px" class="whitespace-nowrap px-5 py-2 text-2-xl text-gray-500">
                                            @Html.DisplayFor(modelItem => item.Cours.course_title)
                                        </td>
                                        <td style="border-width:0px 0px 1px 0px" class="whitespace-nowrap px-5 py-2 text-2-xl text-gray-500">
                                            @Html.DisplayFor(modelItem => item.Teacher.instructor_name)
                                        </td>
                                    </tr>
                                }
                            </table>


                            <p style="margin-top:15px" class="edit-button py-2 px-10 text-lg font-medium text-center text-white bg-amber-600 rounded-lg hover:bg-amber-700 focus:ring-4 focus:outline-none focus:ring-amber-600 dark:bg-amber-600 dark:hover:bg-amber-600 dark:focus:ring-amber-600">

                                <a> @Html.ActionLink("Register a New Course", "Create", "ManageRegistrations")</a>
                            </p>


                        </div>

                    </div>
                    <!-- End of about section -->

                    <div class="my-4"></div>


                </div>
                <!-- End of profile tab -->
            </div>
        </div>
    </div>

</body>
</html>
